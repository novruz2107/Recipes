<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="8dp"
                                    android:padding="16dp"
                                    card_view:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageOfIng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="fitStart"
                card_view:srcCompat="@drawable/trending"/>


            <TextView
                android:id="@+id/nameOfIng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imageOfItem"
                android:background="#1976D2"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Happy Hallowen"
                android:textColor="#ffffff"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/imageOfTick"
                android:layout_width="50dp"
                android:alpha="0"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                card_view:srcCompat="@drawable/tick"/>


        </RelativeLayout>

    </FrameLayout>



</android.support.v7.widget.CardView>